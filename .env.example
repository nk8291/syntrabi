# PowerBI Web Replica Backend Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://powerbi:powerbi123@localhost:5432/powerbi
DB_ECHO=false
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Authentication & Security
JWT_SECRET_KEY=dev-secret-key-at-least-32-characters-long-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Application Settings
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Object Storage (S3/MinIO)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=powerbi-data
S3_REGION=us-east-1
S3_SECURE=false

# File Upload Limits (in bytes)
MAX_UPLOAD_SIZE=104857600
ALLOWED_EXTENSIONS=csv,xlsx,json,parquet

# Performance Settings
QUERY_TIMEOUT=30
QUERY_ROW_LIMIT=10000
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# Background Jobs
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Email Configuration (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true
EMAIL_FROM=noreply@powerbi.local

# Monitoring (optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_REAL_TIME_COLLABORATION=false
ENABLE_ADVANCED_EXPORTS=true